    <script>
        function wrapLabels(label, maxLength) {
            if (typeof label !== 'string' || label.length <= maxLength) {
                return label;
            }
            const words = label.split(' ');
            const lines = [];
            let currentLine = '';
            words.forEach(word => {
                if ((currentLine + word).length > maxLength) {
                    lines.push(currentLine.trim());
                    currentLine = '';
                }
                currentLine += word + ' ';
            });
            lines.push(currentLine.trim());
            return lines;
        }
        
        const commonTooltipCallback = {
            plugins: {
                tooltip: {
                    callbacks: {
                        title: function(tooltipItems) {
                            const item = tooltipItems[0];
                            let label = item.chart.data.labels[item.dataIndex];
                            if (Array.isArray(label)) {
                              return label.join(' ');
                            } else {
                              return label;
                            }
                        }
                    }
                },
                legend: {
                    position: 'bottom',
                },
            }
        };

        const comorbidadesData = {
            labels: ['Transtornos de Ansiedade', ['Abuso de', 'Substâncias'], 'Transtornos de Humor (Depressão)', 'Outros'],
            datasets: [{
                label: 'Prevalência',
                data: [45, 35, 30, 15],
                backgroundColor: [
                    '#3357FF', // Blue
                    '#FF5733', // Orange/Red
                    '#A133FF', // Purple
                    '#33FF57', // Green
                ],
                borderColor: '#f0f4f8',
                borderWidth: 4
            }]
        };

        const comorbidadesCtx = document.getElementById('comorbidadesChart').getContext('2d');
        new Chart(comorbidadesCtx, {
            type: 'doughnut',
            data: comorbidadesData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                ...commonTooltipCallback
            }
        });
        
        const impactoData = {
            labels: ['Desemprego', 'Divórcio', ['Dificuldades', 'Financeiras'], ['Problemas', 'Interpessoais']],
            datasets: [{
                label: 'Aumento do Risco',
                data: [65, 55, 70, 60],
                backgroundColor: '#3357FF',
                borderColor: '#1e40af',
                borderWidth: 1,
                borderRadius: 5
            }]
        };

        const impactoCtx = document.getElementById('impactoChart').getContext('2d');
        new Chart(impactoCtx, {
            type: 'bar',
            data: impactoData,
            options: {
                indexAxis: 'y',
                responsive: true,
                maintainAspectRatio: false,
                 scales: {
                    x: {
                        beginAtZero: true,
                        max: 100,
                        ticks: {
                           callback: function(value) {
                                return value + '%'
                            }
                        }
                    }
                },
                 ...commonTooltipCallback,
                 plugins: {
                     ...commonTooltipCallback.plugins,
                     legend: {
                         display: false
                     }
                 }
            }
        });
    </script>
